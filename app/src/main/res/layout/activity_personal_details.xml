<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_details_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/c_h_bg"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/login_ll_title"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_actionbar_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:onClick="clickButton"
                android:src="@drawable/back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_actionbar_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/titlebg"
                android:textSize="@dimen/we_title_textsize" />

            <ImageView
                android:id="@+id/tv_actionbar_rightimag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="editip"
                android:padding="5dp"
                android:src="@drawable/settings_normal"
                android:visibility="invisible"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_details_rl_head"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/personal_details_man"
        android:layout_marginTop="-62dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/personal_details_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:textSize="@dimen/we_title_textsize"
        android:layout_gravity="center_horizontal"
        android:text="朱长荣"/>

    <View
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        style="@style/horizontal_gray_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/personal_details_ll_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/bumen"/>

            <TextView
                android:id="@+id/personal_details_tv_department"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorWeFontGray_9"
                />
        </LinearLayout>

        <View
            android:id="@+id/personal_details_v_department"
            style="@style/horizontal_gray_style"
            android:layout_below="@+id/personal_details_ll_department" />

        <LinearLayout
            android:id="@+id/personal_details_ll_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_details_v_department"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/gangwei"/>

            <TextView
                android:id="@+id/personal_details_tv_post"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorWeFontGray_9"/>
        </LinearLayout>

        <View
            android:id="@+id/personal_details_v_post"
            style="@style/horizontal_gray_style"
            android:layout_below="@+id/personal_details_ll_post" />

        <LinearLayout
            android:id="@+id/personal_details_ll_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_details_v_post"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/mobile_phone"/>

            <TextView
                android:id="@+id/personal_details_tv_mobile"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/textColor_selected"/>

            <ImageView
                android:id="@+id/personal_details_iv_mobile"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:onClick="clickButton"
                android:src="@drawable/callhim" />
        </LinearLayout>

        <View
            android:id="@+id/personal_details_v_mobile"
            style="@style/horizontal_gray_style"
            android:layout_below="@+id/personal_details_ll_mobile" />

        <LinearLayout
            android:id="@+id/personal_details_ll_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_details_v_mobile"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/phone_number"/>

            <TextView
                android:id="@+id/personal_details_tv_telephone"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/textColor_selected"
                />

            <ImageView
                android:id="@+id/personal_details_iv_telephone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:onClick="clickButton"
                android:src="@drawable/callhim" />
        </LinearLayout>

        <View
            android:id="@+id/personal_details_v_telephone"
            style="@style/horizontal_gray_style"
            android:layout_below="@+id/personal_details_ll_telephone" />

        <LinearLayout
            android:id="@+id/personal_details_ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_details_v_telephone"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/emailbox"/>

            <TextView
                android:id="@+id/personal_details_tv_email"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorWeFontGray_9"
                />
        </LinearLayout>

        <View
            android:id="@+id/personal_details_v_email"
            style="@style/horizontal_gray_style"
            android:layout_below="@+id/personal_details_ll_email" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorWeWindowGrayBackground">

        <TextView
            android:id="@+id/send_message"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btbg_blue"
            android:clickable="true"
            android:onClick="clickButton"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/sendmessage"
            android:textColor="#fff"
            android:textSize="17sp" />

    </RelativeLayout>
</LinearLayout>