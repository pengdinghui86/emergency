<!--item布局，自定义View-->
<com.dssm.esc.view.widget.LeftSlideView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--按钮使用了TextView而不是Button，是因为５.０以上版本使用Button会显示在上层产出错误显示-->
        <TextView
            android:id="@+id/tv_function1"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="授权"
            android:textSize="20sp"
            android:background="@color/view_blue"
            android:textColor="#DDFFFFFF"
            />

        <TextView
            android:id="@+id/tv_function2"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_function1"
            android:text="中止"
            android:textSize="20sp"
            android:background="@color/red"
            android:textColor="#DDFFFFFF"
            />

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/item_listview_plan"/>

        </RelativeLayout>

    </RelativeLayout>

</com.dssm.esc.view.widget.LeftSlideView>