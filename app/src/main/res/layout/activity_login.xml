<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWeWindowGrayBackground"
    android:orientation="vertical">

    <com.dssm.esc.view.widget.Title_Layout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="欢迎登录"
            style="@style/normal_gray_text" />

        <View style="@style/horizontal_gray_style" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="8dp">

                <TextView
                    android:id="@+id/login_name_tv"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账号"
                    android:textSize="@dimen/we_title_textsize" />

                <EditText
                    android:id="@+id/login_name_et"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="@string/loginnamehint"
                    android:padding="5dp"
                    android:textSize="@dimen/we_title_textsize"></EditText>
            </LinearLayout>

            <View style="@style/horizontal_gray_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="8dp">

                <TextView
                    android:id="@+id/login_psw_tv"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="密码"
                    android:textSize="@dimen/we_title_textsize" />

                <EditText
                    android:id="@+id/login_psw_et"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="@string/loginpswhint"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textSize="@dimen/we_title_textsize" />
            </LinearLayout>

            <View style="@style/horizontal_gray_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <!--
                     <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_register_bg"
                    android:gravity="center"
                    android:onClick="register"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/register"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
                -->

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/btbg_blue"
                    android:gravity="center"
                    android:onClick="login"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/we_title_textsize" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>