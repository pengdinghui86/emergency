<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupsignin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/set_gray">

    <RelativeLayout
        android:id="@+id/control_rl_segmented"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/title_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <RadioGroup
            android:id="@+id/segment_control_sign_grop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/rb_receive_all"
                style="@style/message_title_radio_button"
                android:checked="true"
                android:text="全部" />

            <RadioButton
                android:id="@+id/rb_received"
                style="@style/message_title_radio_button"
                android:text="已接收" />

            <RadioButton
                android:id="@+id/rb_not_receive"
                style="@style/message_title_radio_button"
                android:text="未接收" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/segment_control_sign_grop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/rb_sign_all"
                style="@style/message_title_radio_button"
                android:checked="true"
                android:text="全部" />

            <RadioButton
                android:id="@+id/rb_signed"
                style="@style/message_title_radio_button"
                android:text="已签到" />

            <RadioButton
                android:id="@+id/rb_not_sign"
                style="@style/message_title_radio_button"
                android:text="未签到" />
        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filter_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="8dp"
        android:gravity="center">

        <com.dssm.esc.view.widget.ClearEditText
            android:id="@+id/filter_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="10dp"
            android:hint="@string/editflithint"
            android:textColorHint="@color/colorWeFontGray_9"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            style="@style/normal_text"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/no_data"/>

</LinearLayout>