<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/set_gray">

    <RelativeLayout
        android:id="@+id/event_process_detail_rl_segmented"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/title_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <RadioGroup
            android:id="@+id/event_process_detail_segmented"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/rb_relation_people"
                style="@style/message_title_radio_button"
                android:checked="true"
                android:text="相关人员" />

            <RadioButton
                android:id="@+id/rb_emergency_group"
                style="@style/message_title_radio_button"
                android:text="应急小组" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_actionbar_editData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/we_normal_textsize"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/assign_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone"
        android:divider="@color/colorWeSplitMini"
        android:dividerHeight="1dp"
        android:layout_marginTop="10dp">
    </ListView>

    <LinearLayout
        android:id="@+id/ll_contact_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_edit_ll"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone">

    </LinearLayout>

</LinearLayout>