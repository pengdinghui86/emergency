<?xml version="1.0" encoding="utf-8"?>
<com.dssm.esc.view.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/we_listview_item_top_margin"
            android:layout_marginTop="10dp"
             android:background="@color/colorWeWindowGrayBackground"
            >

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp"
                android:gravity="left"
                android:text="应急通知接收情况" />

            <TextView
                android:id="@+id/look_details_receive"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                 android:padding="5dp"
                android:text="查看详情"
                android:textColor="@color/textColor_selected" />
        </LinearLayout>

        <View style="@style/horizontal_gray_style"/>

        <LinearLayout 
            android:id="@+id/lin_grop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
       
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/we_listview_item_top_margin"
             android:background="@color/colorWeWindowGrayBackground" >

            <TextView
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="5dp"
                android:text="应急小组签到情况" />

            <TextView
                android:id="@+id/look_details_sigin"
                style="@style/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="查看详情"
                 android:padding="5dp"
                android:textColor="@color/textColor_selected" />
        </LinearLayout>

        <View style="@style/horizontal_gray_style" />

        <LinearLayout
            android:id="@+id/lin_grop_sigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/we_listview_item_top_margin"
            android:background="@color/colorWeWindowGrayBackground"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text="应急小组总人数:"/>

            <TextView
                android:id="@+id/emergency_grop_number"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/we_listview_item_top_margin"
            android:background="@color/colorWeWindowGrayBackground"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text="已签到总人数:"
                />

            <TextView
                android:id="@+id/sigin_number"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/red" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/we_listview_item_top_margin"
            android:background="@color/colorWeWindowGrayBackground"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="未签到总人数:"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/no_sigin_number"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>

</com.dssm.esc.view.widget.MyScrollView>