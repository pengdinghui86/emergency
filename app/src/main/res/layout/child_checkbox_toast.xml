<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/item_pressed_selector"
     >

    <LinearLayout
        android:id="@+id/cb_layout"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/group_cb_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ck_checked" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toLeftOf="@id/child_chexkbox"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/group_tv"
            style="@style/message_content_style"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            />
    </LinearLayout>

</RelativeLayout>