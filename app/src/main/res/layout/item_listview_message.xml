<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/set_gray"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/message_listview_iv_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/emergency_type"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/message_listview_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/small_gray_text"
            android:layout_alignParentRight="true"
            android:text="12:16"/>

        <TextView
            android:id="@+id/message_listview_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/message_listview_tv_time"
            android:ellipsize="end"
            android:paddingRight="20dp"
            style="@style/normal_text"
            android:text="集中监控应急事件"/>

        <TextView
            android:id="@+id/message_listview_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_below="@+id/message_listview_tv_time"
            style="@style/normal_gray_text"
            android:text="同城灾备切换预案已评估，请及时执行预案！"/>
    </RelativeLayout>

</LinearLayout>