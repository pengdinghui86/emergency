<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@color/set_gray"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/event_process_detail_rl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="8dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/event_process_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事件评估"
            android:gravity="right"
            android:layout_alignParentRight="true"
            style="@style/normal_text" />

        <TextView
            android:id="@+id/event_process_detail_tv_overtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="已用时:"
            android:layout_below="@+id/event_process_detail_tv_name"
            style="@style/small_gray_text" />

        <TextView
            android:id="@+id/event_process_detail_tv_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_below="@+id/event_process_detail_tv_name"
            android:layout_toRightOf="@+id/event_process_detail_tv_overtime_title"
            style="@style/small_gray_text"
            android:layout_alignParentRight="true"
            android:text="29分19秒"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/event_process_detail_v_top"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line_vertical"/>

        <ImageView
            android:id="@+id/event_process_detail_iv_process"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/circle_complete_bg"
            android:src="@drawable/event_process_evaluation" />

        <View
            android:id="@+id/event_process_detail_v_bottom"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line_vertical"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/event_process_detail_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_gray_text"
            android:text="11-2 11:50:19"/>

    </RelativeLayout>

</LinearLayout>