<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/introduce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_gray">

    <com.dssm.esc.view.widget.Title_Layout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/name"/>

        <TextView
            android:id="@+id/name"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorWeFontGray_9"/>
    </LinearLayout>

    <View
        android:id="@+id/v1"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l1" />

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       >

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/sex"
            android:layout_gravity="center"
            android:gravity="left"/>

        <TextView
            android:id="@+id/sex"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorWeFontGray_9"/>
    </LinearLayout>

    <View
        android:id="@+id/v2"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l2" />

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v2"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
       android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/gangwei"/>

        <TextView
            android:id="@+id/gangwei"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorWeFontGray_9"/>
    </LinearLayout>

    <View
        android:id="@+id/v3"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l3" />

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
       android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/phongnumber"/>

        <TextView
            android:id="@+id/phonenumber"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/textColor_selected"/>

        <ImageView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:clickable="true"
            android:onClick="clickButton"
            android:src="@drawable/callhim" />
    </LinearLayout>

    <View
        android:id="@+id/v4"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l4" />

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v4"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
       android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/phongnumber2"/>

        <TextView
            android:id="@+id/phonenumber2"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/textColor_selected"
            />

        <ImageView
            android:id="@+id/call2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:clickable="true"
            android:onClick="clickButton"
            android:src="@drawable/callhim" />
    </LinearLayout>

    <View
        android:id="@+id/v5"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l5" />

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v5"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/emailbox"/>

        <TextView
            android:id="@+id/email"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorWeFontGray_9"
            />
    </LinearLayout>

    <View
        android:id="@+id/v6"
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l6" />

    <LinearLayout
        android:id="@+id/l7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v6"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
       android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/bumen"/>

        <TextView
            android:id="@+id/bumen"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/colorWeFontGray_9"
            />
    </LinearLayout>

    <View
        style="@style/horizontal_gray_style"
        android:layout_below="@+id/l7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l7"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/send_message"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btbg_blue"
            android:clickable="true"
            android:onClick="clickButton"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/sendmessage"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>