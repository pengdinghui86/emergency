<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cb_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/child_checkbox"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|center_vertical"
            android:focusable="false"
            android:button="@null"
            android:background="@drawable/checkbox_background_selector"
            android:paddingRight="2dp"
            android:focusableInTouchMode="false"
            android:gravity="right"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/cb_layout"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/gropimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/group_tv"
            android:layout_alignTop="@+id/group_tv"
            android:layout_marginLeft="@dimen/we_margin_left"
            android:src="@drawable/rightlist" />

        <TextView
            android:id="@+id/group_tv"
            style="@style/message_content_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toRightOf="@+id/gropimg"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWeSplitMini" />

</RelativeLayout>