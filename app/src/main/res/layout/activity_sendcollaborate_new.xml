<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sendcollaborate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/login_ll_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/title_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_actionbar_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:text="应急通知录"
            android:textColor="@color/titlebg"
            android:textSize="@dimen/we_title_textsize" />

        <ImageView
            android:id="@+id/tv_actionbar_rightimag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/send_history"
            />
    </LinearLayout>

    <com.dssm.esc.view.widget.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                style="@style/horizontal_gray_style"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/contact_people_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#fff">

                <TextView
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/contact_people" />

                <TextView
                    android:id="@+id/contact_people"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1.5"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:hint="@string/add_contact"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_style"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tvbk_blue"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/seabar_input"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/messageedit"
                    android:imeOptions="actionNext"
                    android:maxLength="70"
                    android:textColorHint="#8C8C8C"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/xitong_ll1"
                    style="@style/addresslist_togbtlinear_style"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/tvbk_gray"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/system" />

                    <ToggleButton
                        android:id="@+id/xitong_tg"
                        style="@style/addresslist_togbt_style"
                        android:textOff="@string/xitong"
                        android:textOn="@string/xitong" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/message_ll1"
                    style="@style/addresslist_togbtlinear_style"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/tvbk_gray"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/short_message" />

                    <ToggleButton
                        android:id="@+id/shortmessage_tg"
                        style="@style/addresslist_togbt_style"
                        android:textOff="@string/shortmessage"
                        android:textOn="@string/shortmessage" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_ll1"
                    style="@style/addresslist_togbtlinear_style"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/tvbk_gray"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/email" />

                    <ToggleButton
                        android:id="@+id/email_tg"
                        style="@style/addresslist_togbt_style"
                        android:textOff="@string/email"
                        android:textOn="@string/email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/APP_ll1"
                    style="@style/addresslist_togbtlinear_style"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tvbk_gray"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/app" />

                    <ToggleButton
                        android:id="@+id/app_tg"
                        style="@style/addresslist_togbt_style"
                        android:textOff="@string/app"
                        android:textOn="@string/app" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/send_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="75dp"
                android:background="@color/textColor_selected"
                android:gravity="center"
                android:padding="10dp"
                android:text="发送"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </com.dssm.esc.view.widget.MyScrollView>

</LinearLayout>