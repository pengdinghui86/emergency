<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dssm.esc.view.widget.Title_Layout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/horizontal_gray_style"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/set_gray">

        <RelativeLayout
            android:id="@+id/control_center_rl_event_procedure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/control_center_iv_event_procedure"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/event_procedure"
                />

            <TextView
                style="@style/message_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:layout_centerHorizontal="true"
                android:text="@string/event_procedure"
                android:layout_below="@+id/control_center_iv_event_procedure"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/control_center_rl_command_display"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/control_center_iv_command_display"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/command_display"
                />

            <TextView
                style="@style/message_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:layout_centerHorizontal="true"
                android:text="@string/command_display"
                android:layout_below="@+id/control_center_iv_command_display"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>