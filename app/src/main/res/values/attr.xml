<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SegmentedGroup">
        <attr name="sc_corner_radius" format="dimension" />
        <attr name="sc_border_width" format="dimension" />
        <attr name="sc_tint_color" format="color" />
        <attr name="sc_checked_text_color" format="color" />
    </declare-styleable>
    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="colors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
        <attr name="selectedIndex" format="integer" />
    </declare-styleable>

    <declare-styleable name="RingChartViewStyle">
        <attr name="innerRingStrokeLen" format="dimension"/>
        <attr name="innerRingRadius" format="dimension"/>
        <attr name="outRingStrokeLen" format="dimension"/>
        <attr name="outRingRadius" format="dimension"/>
        <attr name="centerColor" format="color"/>
        <attr name="defaultRingColor" format="color"/>
        <attr name="innerRingColor" format="color"/>
        <attr name="outRingColor" format="color"/>
        <attr name="description" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressBarStyle">
        <attr name="progressBarHeight" format="dimension"/>
        <attr name="defaultBarColor" format="color"/>
        <attr name="progressBarColor" format="color"/>
        <attr name="progressText" format="string"/>
        <attr name="progressBarTextSize" format="dimension"/>
        <attr name="progressBarTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="NineGridImageView">
        <attr format="dimension" name="imgGap"/>
    </declare-styleable>
</resources>